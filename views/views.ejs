<%- include('./partials/header.ejs') %>

    <!-- Section for the views page -->
    <section id="views-section">
        <div class="fade-in">
            <header>
                <h1 class="view-page-text" style="font-size: 50px !important;">Select Category to View</h1>
            </header>
            <div class="view-ordering">
                <!-- Create a div to organize all of the view buttons -->
                <div class="view-buttons">
                    <a id="patient-icon" class="view-container1" href="/patients">
                        <span class="view-icon"><i class="fa-solid fa-bed-pulse"></i></span> Patients
                    </a>
                    <a id="treatment-icon" class="view-container2" href="/treatments">
                        <span class="view-icon"><i class="fa-solid fa-hand-holding-medical"></i></span> Treatments
                    </a>
                    <a id="provider-icon" class="view-container3" href="/providers">
                        <span class="view-icon"><i class="fa-solid fa-user-doctor"></i></span> Providers
                    </a>
                    <a id="department-icon" class="view-container4" href="/departments">
                        <span class="view-icon"><i class="fa-solid fa-hospital"></i></span> Departments
                    </a>
                    <a id="statistics-icon" class="view-container5" href="/statistics">
                        <span class="view-icon"><i class="fa-solid fa-chart-column"></i></span> Statistics
                    </a>
                    <a id="exit-view-icon" class="view-container6" href="/home">
                        <span class="view-icon"><i class="fa-solid fa-circle-xmark"></i></span> Exit
                    </a>
                </div>
            </div>
        </div>
    </section>

<%- include('./partials/footer.ejs') %>